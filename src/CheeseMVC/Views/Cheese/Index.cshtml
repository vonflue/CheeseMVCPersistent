@model List<CheeseMVC.Models.Cheese>

    @{ ViewBag.Title = "Cheeses";}

    <h1>@ViewBag.Title</h1>

    <p>To edit a cheese, click on the name of the cheese.</p>

    <table class="table">

        <tr>
            <th>Name</th>
            <th>Description</th>
            <td>Category</td>
        </tr>

        @foreach (var cheese in Model)
    {
        <tr>
            <td><a asp-controller="Cheese" asp-action="Edit" asp-route-id=@cheese.ID>@cheese.Name</a></td>
            <td>@cheese.Description</td>
            <td>@cheese.Category.Name</td>
        </tr>
    }
    </table>

    @if (Model.Count == 0)
{
    <p>No cheeses yet!</p>
}

    <p>
        <a asp-controller="Cheese" asp-action="Add">Add</a>
        |
        <a asp-controller="Cheese" asp-action="Remove">Remove</a>
    </p>
