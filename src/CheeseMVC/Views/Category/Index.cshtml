@{
    ViewBag.Title = "Cheese Categories";
}

@using CheeseMVC.Models
@model List<CheeseCategory>


    <h2>@ViewBag.Title</h2>

    @if (Model.Count() > 0)
{
    <ul>
        @foreach (var category in Model)
        {
        <li>@category.Name</li>
        }
    </ul>
}
else
{
    <p>We don't have any categories yet</p>
}

<a asp-controller="Category" asp-action="Add">Add Category</a>
