@using CheeseMVC.Models
@model List<CheeseCategory>
@* you could also skip the @using statement with @model List<CheeseMVC.Mdels.CheeseCategory> *@
@* does the relationship between @using and @model make more sense knowing this? *@
<!DOCTYPE html>

<html>
<head>
    <title>Cheese Categories</title>
</head>
<body>
<div>
    @if (Model.Count > 0) {
        <ul>
            @foreach (var category in Model) {
                <li>@category.Name</li>
            }
        </ul>
    }
    else {
        <p>No categories added yet. Add one using the link below</p>
    }
    
    <p><a asp-controller="Category" asp-action="Add">Add Cheese Category</a></p>
</div>
</body>
</html>